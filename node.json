{
	"vm": {
		"ip_address": "10.25.83.101",
		"hostname":	"cakebox"
	},
	"attributes": {
		"percona": {
			"skip_passwords": true,
			"server": {
				"bind_address": "0.0.0.0",
				"character_set": "utf8",
				"collation": "utf8_unicode_ci"
			}
		},
		"php_fpm": {
			"php_modules": [
				"php5-common",
				"php5-cli",
				"php5-mysql",
				"php5-curl",
				"php5-gd",
				"php5-mcrypt",
				"php5-xdebug"
			]
		},
		"utilities": {
			"login_chdir": {
				"directory": "/apps"
			}
		}
	},
	"run_list": [
		"recipe[apt]",
		"recipe[git]",
		"recipe[percona::server]",
		"recipe[percona::backup]",
		"recipe[php5-fpm::install]",
		"recipe[nginx]",
		"recipe[utilities::login_chdir]"
	]
}
