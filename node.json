{
	"vm": {
		"ip_address": "10.25.83.101",
		"hostname":	"cakebox"
	},
	"attributes": {
		"percona": {
			"skip_passwords": true,
			"server": {
				"bind_address": "0.0.0.0",
				"character_set": "utf8",
				"collation": "utf8_unicode_ci"
			}
		},
		"nginx": {
			"repository": "ppa"
		},
		"php_fpm": {
			"update_system": false,
			"upgrade_system": false,
			"php_modules": [
				"php5-common",
				"php5-cli",
				"php5-dev",
				"php5-curl",
				"php5-mcrypt",
				"php5-intl",
				"php5-mysql",
				"php5-imap",
				"php5-xdebug",
				"php5-gd",
				"php5-imagick",
				"php5-memcache",
				"php5-memcached",
				"php5-redis",
				"php-apc",
				"php5-geoip",
				"php5-gmp",
				"php5-json",
				"php-pear"
			]
		}
	},
	"run_list": [
		"recipe[apt]",
		"recipe[git-ppa]",
		"recipe[percona::server]",
		"recipe[percona::backup]",
		"recipe[postgresql::server]",
		"recipe[php5-fpm::install]",
		"recipe[nginx::server]",
		"recipe[composer]",
		"recipe[phpunit]",
		"recipe[memcached]",
		"recipe[redis]"
	]
}
