{
	"vm": {
		"ip_address": "10.25.83.101",
		"hostname":	"cakebox"
	},
	"attributes": {
		"nginx": {
			"repository": "ppa",
			"skip_default_site": true
		},
		"percona": {
			"keyserver": "pool.sks-keyservers.net",
			"server": {
				"root_password": "secret",
				"bind_address": "0.0.0.0",
				"character_set": "utf8",
				"collation": "utf8_unicode_ci"
			}
		},
		"php5_ppa": {
			"modules": [
				"php5-common",
				"php5-cli",
				"php5-dev",
				"php5-curl",
				"php5-mcrypt",
				"php5-intl",
				"php5-mysql",
				"php5-sqlite",
				"php5-imap",
				"php5-xdebug",
				"php5-gd",
				"php5-imagick",
				"php5-memcache",
				"php5-memcached",
				"php5-redis",
				"php-apc",
				"php5-geoip",
				"php5-gmp",
				"php5-json",
				"php-pear"
			]
		},
		"java": {
			"jdk_version": "7"
		},
		"elkstack": {
			"config": {
				"lumberjack_data_bag": "elkstack_lumberjack"
			}
		},
		"cakebox": {
			"databases": {
				"remote_username": "vagrant",
				"remote_password": "vagrant"
			}
		}
	},
	"run_list": [
		"recipe[apt]",
		"recipe[git-ppa]",
		"recipe[percona::server]",
		"recipe[percona::backup]",
		"recipe[postgresql::server]",
		"recipe[php5-ppa]",
		"recipe[nginx::server]",
		"recipe[memcached]",
		"recipe[redis::server]",
		"recipe[curl]",
		"recipe[composer]",
		"recipe[phpcs]",
		"recipe[phpunit]",
		"recipe[heroku::toolbelt]",
		"recipe[java]",
		"recipe[elkstack::single]",
		"recipe[cakebox]"
	]
}
